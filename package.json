{
  "name": "elonmu.sh",
  "version": "0.1.2",
  "description": "ExpressJS api to fetch a random news article about our Lord and Savior Elon Musk",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "lint:check": "tslint -c tslint.json -p tsconfig.json",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc copy-assets",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "format": "prettier --write './**/*.{ts,tsx,css,md,json}' --config ./.prettierrc",
    "format:check": "prettier --check './**/*.{ts,tsx,css,md,json}' --config ./.prettierrc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "funny",
    "satire",
    "gag",
    "api"
  ],
  "author": {
    "email": "nickkelly.858@gmail.com",
    "name": "nickatnight",
    "url": "https://nickkelly.info"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.4",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.2",
    "@types/shelljs": "^0.8.11",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.4",
    "rimraf": "^4.4.0",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5"
  }
}
